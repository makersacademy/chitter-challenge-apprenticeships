<link rel="stylesheet" style="text/css" href="/css/homepage.css">
<link rel="stylesheet" style="text/css" href="/css/error_on_add.css">

<center>
  <h1> <img src = "https://pbs.twimg.com/profile_images/1244526549769961475/XDl3NWQG_400x400.jpg" alt = "Logo" width = "30" height = "30">
    Welcome to Chitter <%= @name %>
    <img src = "https://pbs.twimg.com/profile_images/1244526549769961475/XDl3NWQG_400x400.jpg" alt = "Logo" width = "30" height = "30"> </h1>

<p class ='error_message'><%= flash[:notice] %></p>

<h2> New Peep </h2>
<form action = '/new'>
  <input type = 'submit' name = 'Make New Peep' value = 'Make New Peep'>
</form>
<br>
<h2> Search </h2>
<form action = '/search' method = 'post'>
  <label for 'search'>
    Search for:
  </label>
  <input type = 'text' name = 'search'>
  <input type = 'submit' name = 'Search' value = 'Search'>
</form>
<br>
<h2> Newsfeed </h2>
  <ul class = "custom-list">
    <% @peeps.each do |cheep| %>
    <li>
      <%= cheep.message %> (<%= cheep.date %>)
    </li>
    <% end %>
  </ul>
</center>
