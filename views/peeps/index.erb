<h1>Chitter</h1>

<form action="peeps/find">
  <label for="keyword">
    Enter Keyword:
    <input type="text" name="keyword">
  </label>
  <input type="submit" value="Search Peeps" />
</form>
<form action="peeps/new">
  <input type="submit" value="Add Peep" />
</form>

<ul>
  <% @peeps.each do |peep| %>
  <li class='peep' id='peep-<%= peep.id %>'>
    <%= peep.message %>
    <%= peep.posted_on %>
  </li>
  <% end %>
</ul>
