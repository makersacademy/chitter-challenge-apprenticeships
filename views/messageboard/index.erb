<html lang="en" class="no-js">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Merriweather' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="styles.css"> 
</head>

<body>
  <main>
    <h1> This is the homepage for Chitter </h1>
    <form align = 'center' class = 'cd-form' action = 'messageboard/search' method ='post' >
        <input type = 'text' name = 'keyword' ><br>
        <input type = 'submit' value = 'Search' > 
    </form>
    <ul>
      <% @peeps.each do |peep| %>
        <li class="cd-box">
            <%=  peep.message  %> 
            <%=  peep.time  %>
        </li>
      <% end %>
    </ul>
    <form align = 'center' action = 'messageboard/add' method ='get' >
        <input type = 'submit' value = 'Add' > 
    </form>
  </main>
</body>


