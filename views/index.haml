%html
  %head
    %title Chitter
    %link(href="css/app.css" rel="stylesheet" type="text/css" )
  %body
    %div
      #header
        %h1 Chitter ü§ê
        %h3 What u been peepin?
    %section
      %form{ action:'/send-peep', method:'post' }
        .peep-box
          %div
            %input{ class:'inputtext', type:'text', name:'new_peep', placeholder:'Say what you been peepin...' }
            %input{ class:'button', type:'submit', value:'Send Peep' }
    %section
      %ul
        - @peeps.each do |peep|
          %li{ style: "list-style-type:none" }
            %div
              .peeps-list
                %p= peep.message
                %div{ class: 'time'}= peep.timestamp
          

