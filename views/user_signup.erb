  <body>
    <h2>Please register here</h2>
    <br>
    <p><font color="red">  <%= flash[:notice] %> </font></p>
    <form action='/users/add' method='post'>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" name="username">
        <div id="userHelp" class="form-text">Make sure to remember your chosen username!</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password">
      </div>
      <button type="submit" class="btn btn-primary" name='register' value='Register'>Register</button>
    </form>
    <br>
    <h5>Already have an account? <a href="/users/login">Sign in here</a></h5>
  </body>
</html>
