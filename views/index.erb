<h1>
Chitter Peeps
</h1>
  
<ul>
  <% @peeps.each do |peep| %>
    <li><%= peep %></li>
  <% end %>
</ul>

<form action="/peep" method="post">
  <label for="message">
    Enter Peep
    <input type="text" name="message">
  </label>
  <input type="submit" value="Submit">
</form>

<form action="/filter" method="post">
  <label for="filter">
    Search By
    <input type="text" name="filter">
  </label>
  <input type="submit" value="Submit-filter">
</form>