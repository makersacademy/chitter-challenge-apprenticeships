<div class="new_post">
  <form method="post" action="/new">
    <textarea class="text-input" name="message" placeholder="Enter a peep (max 200 char)..."></textarea><br>
    <input class="submit button" type="submit" value="Post">
  </form>

  <%= flash[:empty] %>
</div>

<div class="search">
  <form method="get" action="/search">
    <input class="search button" type="submit" value="Search">
  </form>
</div>

<div class="peeps">
  <% @peeps.each do | peep | %>
    <section class="container" id="<%= peep.id %>">
      <p class="peep"><%= peep.message %></p>
      <p class="date"><%= DateFormatter.format_date(peep.date) %></p>
    </section>
  <% end %>
</div>
