<h1>Chitter</h1>

<form action='/addpeep' method='post'>
  <input name='add_peep' type='text' placeholder='Write a peep'>
  <button type='submit'>Add</button>
</form>

<form action='/search' method='post'>
  <input name='search' type='text' placeholder='search for a peep'>
  <button type='submit'>Add</button>
</form>

<ul> 
  <% @peeps.each do |peep| %>
    <li> <%= peep.message %> - <%= peep.date %> </li>
  <% end %>
</ul>