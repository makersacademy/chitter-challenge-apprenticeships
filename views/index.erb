<header style = "background-color: #00B9ED"</header>

<header><h1 style="color: white; font-family: Monospace, monaco; text-align: center;">Welcome to Chitter</h1></header>

<body style="background-color: #F0FFFF"></body>

<style>
input[type=submit]{
  background-color: #87CEFA;
  border: 4px solid: white;
  color: black;
  padding: 4px 8px;
  text-decoration: none;
  margin: 4px 2px;
  cursor: cursor;
}
input[type="submit"]:hover {
	background: #E0FFFF ;
}
</style>

<form action="/peeps" method="post">
  <label for="message">
    <div style="color: white; font-family: Arial; text-indent: 2%;">Send a peep</div>
  <input type="text" name="message" />
  <input type="submit" value="Send" />
</form>

<ul>
  <% @peeps.each do |peep| %>
  <li class='peep' id='peep-<%= peep.id %>'>
  <h3> <%= peep.message %> </h3>
  <%= peep.date %>
</li>
  <% end %>
