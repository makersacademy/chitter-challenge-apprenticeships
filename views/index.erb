<html>
  <head>
    <meta charset="utf-8">
    <title> Chitter App</title>
  </head>
  
  <body>
  <table class="table">
  <tr>
    <th scope="col">Peeps</th>
   </tr>
  <% @peeps.each do |peep| %>
    <tr>
      <td><%= peep.message[:message] %></td>
    </tr>
    <tr>
      <td><%= peep.message[:date] %></td>
      </tr>
  <% end %>
</table>


<h3>Add a message</h3>
<form action="/messages" method="post">
  <label for="message">Peep Message:</label>
  <input type="text" id="message" name="message"><br><br>
  <input type="submit" name="Submit">
</form>

  </body>
</html>