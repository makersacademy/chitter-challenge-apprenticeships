<h2>All Peeps Ever Created</h2>
<br>
<form action="/search" method="post">
  <input id="search_keyword" type="text" name="search_keyword" value="<%=@search_keyword%>">
  <input type="submit" value="Search Peeps">
</form>
<br>
<ul>
  <% @peeps.each do |peep| %>
    <li>
      <%= peep.message %> - <%= peep.date %>
      <form action="/peeps/<%=peep.id%>" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input id="delete-<%=peep.id%>" type="submit" value="Delete">
      </form>
    </li>
  <% end %>
</ul>
