<div>
  <% if @show_search %>
  <form action="/search">
    <input type="text" name="search">
    <button type="submit">Search</button>
  </form>
  <% end %>
</div>

<div class="post-container">
  <% for pst in @posts %>
    <div class="post">
      <span class="username">Posted by: <%= pst.get_postee.username %> | <span class="date"><%= pst.created_on %></span>
      <hr>
      <p><%= pst.body %></p>
    </div>
  <% end %>
</div>